<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>StudentsPapers</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>com.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>contentType</param-name>
      <param-value>text/html</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>authorityFilter</filter-name>
    <filter-class>com.filter.AuthorityFilter</filter-class>
    <init-param>
      <param-name>loginPage</param-name>
      <param-value>/SignIn.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>authorityFilter</filter-name>
    <url-pattern>/PersonInfo.jsp</url-pattern>
    <url-pattern>/Success.jsp</url-pattern>
    <url-pattern>/UpdatePerson.jsp</url-pattern>
    <url-pattern>/SignIn.jsp</url-pattern>
    <url-pattern>/PwdPersonUpdate.jsp</url-pattern>
    <servlet-name>AppendPaperServlet</servlet-name>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-name>PwdUpdateServlet</servlet-name>
    <servlet-name>RemovePaperServlet</servlet-name>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-name>UpdateServlet</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>adminAuthFilter</filter-name>
    <filter-class>com.filter.AdminAuthFilter</filter-class>
    <init-param>
      <param-name>loginPage</param-name>
      <param-value>/AdminSignIn.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>adminAuthFilter</filter-name>
    <url-pattern>/ShowAll.jsp</url-pattern>
    <url-pattern>/AdminSignIn.jsp</url-pattern>
    <servlet-name>AdminSignInServlet</servlet-name>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-name>SelectAllServlet</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>HWServlet</servlet-name>
    <servlet-class>com.servlets.DemoTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HWServlet</servlet-name>
    <url-pattern>/com/servlets/Demo/Exception/HW</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>JDBCDemoServlet</servlet-name>
    <servlet-class>com.servlets.JDBCTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JDBCDemoServlet</servlet-name>
    <url-pattern>/com/servlets/Demo/Exception/JDBC</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-class>com.servlets.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignInServlet</servlet-name>
    <url-pattern>/com/servlets/SignInServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/com/servlets/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.servlets.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/com/servlets/UpdateServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.servlets.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/com/servlets/DeleteServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SelectAllServlet</servlet-name>
    <servlet-class>com.servlets.SelectAllServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SelectAllServlet</servlet-name>
    <url-pattern>/com/servlets/SelectAllServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminSignInServlet</servlet-name>
    <servlet-class>com.servlets.AdminSignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminSignInServlet</servlet-name>
    <url-pattern>/com/servlets/AdminSignInServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RemovePaperServlet</servlet-name>
    <servlet-class>com.servlets.RemovePaperServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemovePaperServlet</servlet-name>
    <url-pattern>/com/servlets/RemovePaperServlet</url-pattern>
  </servlet-mapping>
</web-app>